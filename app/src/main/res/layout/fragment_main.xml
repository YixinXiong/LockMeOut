<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homefragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteLMO">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/app_name"
        android:id="@+id/titleCreate"
        android:textSize="45dp"
        android:textStyle="bold"
        android:textColor="@color/blackLMO"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/app_motto"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/greenLMO"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/titleCreate"
        android:layout_marginTop="45dp"/>

    <RelativeLayout
        android:layout_width="255dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/layout_with_lockbtn">

        <Button
            android:id="@+id/lockphone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_green"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="@string/lock_phone"/>


    </RelativeLayout>

</RelativeLayout>
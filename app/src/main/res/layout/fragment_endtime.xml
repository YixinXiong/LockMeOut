<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_endtime"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff9999"
    android:paddingTop="40dp">

    <TextView
        android:id="@+id/set_end_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_end_time"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"/>

    <include
        android:layout_below="@id/set_end_Text"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        layout="@layout/fragment_lockphone"/>

    <Button
        android:id="@+id/lock_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lock_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>

</RelativeLayout>